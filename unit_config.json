{
    "listeners": {
            "*:8000": {
                "pass": "routes"
            }
    },

    "routes": [
        {
            "match": {
                "uri": "/index.html"
            },
            "action": {
                "share": "/var/www/html$uri"
            }
        },
        {
            "match": {
                "uri": "/upload/*"
            },
            "action": {
                "pass": "applications/upload"
            }
        },
        {
            "match": {
                "uri": "/bottle/*"
            },
            "action": {
                "pass": "applications/bottle"
            }
        },
        {
            "match": {
                "uri": "/simplestreams/*"
            },
            "action": {
                "share": "/var/www/simplestreams$uri"
            }
        }
    ],
    "applications": {
        "upload": {
            "type": "python 3.7",
            "path": "/var/www/upload_server/",
            "home": "/home/ubuntu/ss-env/",
            "prefix": "/upload",
            "module": "wsgi",
            "callable": "app",
            "environment": {
                "/var/www/images"
            }
        },
        "bottle": {
            "type": "python 3.7",
            "path": "/var/www/bottle_test/",
            "prefix": "/bottle",
            "home": "/home/ubuntu/ss-env/",
            "module": "wsgi",
            "callable": "app"
        }
    }
}
