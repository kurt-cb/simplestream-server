{
    "listeners": {
            "*:8000": {
                "pass": "routes"
            },
            "*:8443": {
                "pass": "routes",
                "tls": {
                    "certificate": "bundle"
                }
            }
    },
    "routes": [
        {
            "match": {
                "uri": "/html/*"
            },
            "action": {
                "share": "/var/www/$uri"
            }
        },
        {
            "match": {
                "uri": "/"
            },
            "action": {
                "share": "/var/www/html/index.html"
            }
        },
        {
            "match": {
                "uri": "/cert.crt"
            },
            "action": {
                "share": "/opt/lxd-image-server/cert.pem"
            }
        },
        {
            "match": {
                "uri": "/upload/*"
            },
            "action": {
                "pass": "applications/upload"
            }
        },
        {
            "match": {
                "uri": "/bottle/*"
            },
            "action": {
                "pass": "applications/bottle"
            }
        },
        {
            "match": {
                "uri": "/simplestreams/*"
            },
            "action": {
                "share": "/var/www/simplestreams$uri"
            }
        }
    ],
    "applications": {
        "upload": {
            "type": "python 3.7",
            "path": "/home/ubuntu/simplestream-server/upload_server/",
            "working_directory": "/var/www/simplestreams/images",
            "home": "/home/ubuntu/ss-env/",
            "prefix": "/upload",
            "module": "wsgi",
            "callable": "app",
            "environment": {
                "IMAGE_DIR": "/var/www/simplestreams/images"
            },
            "stdout": "/var/log/upload.log",
            "stderr": "/var/log/upload.err"
        },
        "bottle": {
            "type": "python 3.7",
            "path": "/home/ubuntu/simplestream-server/bottle_test",
            "prefix": "/bottle",
            "home": "/home/ubuntu/ss-env/",
            "module": "wsgi",
            "callable": "app"
        }
    },
    "access_log": "/var/log/access.log",
    "settings":  {
        "http": {
            "log_route": true
        }
    }
}
